<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBEF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/rules_text_view"
        android:textSize="25sp"
        android:text="@string/rules"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="#AC9377"
        android:textStyle="bold"
        android:layout_marginTop="20sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_img"
        android:layout_marginTop="95sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="430sp"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
         />

    <Button
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:id="@+id/lower_button"
        android:text="Younger"
        android:onClick="onLowerButtonPressed"
        android:textSize="30sp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/roundedbutton"
        android:textColor="#D0A453"
        android:layout_below="@+id/main_text_view"
        android:layout_toRightOf="@+id/main_text_view"
        android:layout_toEndOf="@+id/main_text_view" />

    <Button
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:id="@+id/higher_button"
        android:text="Older"
        android:onClick="onHigherButtonPressed"
        android:textSize="30sp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/roundedbutton"
        android:textColor="#D0A453"
        android:layout_below="@+id/main_text_view"
        android:layout_toLeftOf="@+id/main_text_view"
        android:layout_toStartOf="@+id/main_text_view" />

</RelativeLayout>