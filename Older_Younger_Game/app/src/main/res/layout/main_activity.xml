<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/rules_text_view"
        android:textSize="25sp"
        android:text="@string/rules"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_img"
        android:layout_marginTop="60sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="430sp"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/higher_button"
        android:text="Higher"
        android:onClick="onHigherButtonPressed"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/main_text_view"
        android:layout_alignBottom="@+id/main_text_view"
        android:layout_toLeftOf="@+id/main_text_view"
        android:layout_toStartOf="@+id/main_text_view"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lower_button"
        android:text="Lower"
        android:onClick="onLowerButtonPressed"
        android:textSize="30sp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/main_text_view"
        android:layout_alignBottom="@+id/main_text_view"
        android:layout_toRightOf="@+id/main_text_view"
        android:layout_toEndOf="@+id/main_text_view" />

</RelativeLayout>